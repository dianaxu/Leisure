<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbarH"
        android:background="@drawable/selector_white_top"
        android:clickable="true"
        android:gravity="center"
        android:text="全本缓存"
        android:textColor="@color/textTitleColor"
        android:textSize="@dimen/itemTitleS" />

    <TextView
        android:id="@+id/tv_current_pos"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbarH"
        android:background="@drawable/selector_white_bottom"
        android:clickable="true"
        android:gravity="center"
        android:text="从当前章节缓存"
        android:textColor="@color/textTitleColor"
        android:textSize="@dimen/itemTitleS" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbarH"
        android:layout_marginTop="@dimen/margin"
        android:background="@drawable/selector_white"
        android:clickable="true"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/textTitleColor"
        android:textSize="@dimen/itemTitleS" />

</LinearLayout>