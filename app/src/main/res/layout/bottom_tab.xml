<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/itemBg"
    android:orientation="horizontal"
    android:paddingTop="4dp">

    <com.example.leisure.widget.GradualTabView
        android:id="@+id/gtv_comic"
        style="@style/BottomTabGradualTabView"
        app:icon="@drawable/anim_comic_selector"
        app:text="@string/tab_comic" />

    <com.example.leisure.widget.GradualTabView
        android:id="@+id/gtv_bookshelf"
        style="@style/BottomTabGradualTabView"
        app:icon="@drawable/anim_home_selector"
        app:text="@string/tab_bookshelf" />


</LinearLayout>

