<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GradualTabView">
        <attr name="text_start_color" format="color" />   <!--文字开始颜色-->
        <attr name="text_end_color" format="color" />   <!--文字结束颜色-->
        <attr name="text" format="string" />       <!---->
        <attr name="icon" format="reference" />       <!--进度颜色-->
        <attr name="icon_selected" format="reference" />  <!--进度开始颜色-->
    </declare-styleable>

    <declare-styleable name="CommonToolbar">
        <attr name="toolbar_left_drawable" format="reference" />   <!---->
        <attr name="toolbar_right_drawable" format="reference" />   <!---->
        <attr name="toolbar_right_text" format="string" />
        <attr name="toolbar_text" format="string" />   <!---->
        <attr name="toolbar_text_color" format="color" />   <!---->
        <attr name="toolbar_text_enable" format="boolean" />  <!--是否文本搜索  默认显示-->
        <attr name="toolbar_text_size" format="integer" />   <!---->
        <attr name="toolbar_search_enable" format="boolean" />   <!--是否显示搜索 默认不显示-->
        <attr name="toolbar_search_hint" format="string" />  <!--搜索提示文字-->
    </declare-styleable>

    <declare-styleable name="WaveImageView">
        <attr name="wave_src" format="reference" />
        <attr name="wave_progress_color" format="reference" />
    </declare-styleable>

    <declare-styleable name="CountDownProgressView">
        <attr name="progress_color" format="color" />
        <attr name="progress_width" format="dimension" />
        <attr name="corner" format="dimension" />
        <attr name="max_time" format="integer" />
        <attr name="time_interval" format="integer" />
        <attr name="show_num" format="boolean" />
        <attr name="progress_style" format="enum">
            <enum name="rect" value="0" />
            <enum name="circle" value="1" />
        </attr>
    </declare-styleable>

</resources>