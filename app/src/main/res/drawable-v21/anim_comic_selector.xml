<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/state_selected"
        android:drawable="@drawable/comic_s"
        android:state_selected="true" />

    <item
        android:id="@+id/state_default"
        android:drawable="@drawable/comic" />

    <transition
        android:drawable="@drawable/avd_comic_d_to_s"
        android:fromId="@id/state_default"
        android:toId="@id/state_selected" />

    <transition
        android:drawable="@drawable/avd_comic_s_to_d"
        android:fromId="@id/state_selected"
        android:toId="@id/state_default" />

</animated-selector>